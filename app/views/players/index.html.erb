<p style="color: green"><%= notice %></p>

<% content_for :title, "Players" %>

<h1>Players</h1>

<div id="players">
  <% @players.each do |player| %>
    <%= render player %>
    <p>
      <%= link_to "Show this player", player %>
    </p>
  <% end %>
</div>

<% if user_signed_in? && current_user.admin? %>
  <div id="admin-actions">
    <h2>Admin Actions</h2>
    <p>
      <%= link_to "New player", new_player_path %>
    </p>
  </div>
<% end %>
