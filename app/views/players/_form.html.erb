<%= form_with(model: player) do |form| %>
  <% if player.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(player.errors.count, "error") %> prohibited this player from being saved:</h2>

      <ul>
        <% player.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :surname, style: "display: block" %>
    <%= form.text_field :surname %>
  </div>

  <div>
    <%= form.label :birthday, style: "display: block" %>
    <%= form.date_field :birthday %>
  </div>

  <div>
    <%= form.label :ranking, style: "display: block" %>
    <%= form.number_field :ranking %>
  </div>

  <div id="new_user_fields">
    <%= form.label :user_email, 'User Email', style: "display: block" %>
    <%= form.email_field :user_email %>
    <%= form.label :user_password, 'User Password', style: "display: block" %>
    <%= form.password_field :user_password %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
