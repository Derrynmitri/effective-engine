<div data-controller="delete-modal" 
     data-delete-modal-delete-url-value="<%= delete_url %>"
     data-delete-modal-item-name-value="<%= item_name %>">
  <%= content_tag :button, 
      button_text, 
      data: { action: "click->delete-modal#show" }, 
      class: button_class,
      onclick: "event.stopPropagation();" %>
  <div data-delete-modal-target="modal" 
       class="fixed inset-0 overflow-y-auto h-full w-full z-50 hidden items-center justify-center">
    <div class="bg-gray-600 dark:bg-gray-900 dark:opacity-75 opacity-50 inset-0 fixed z-0" data-action="click->delete-modal#cancel"></div>
    <div class="relative p-4 w-full max-w-xl h-auto">
      <div class="relative bg-white rounded-lg shadow dark:bg-gray-800">
        <div class="flex items-center justify-between p-4 md:p-5 border-b border-gray-200 rounded-t dark:border-gray-600">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
            Delete Item
          </h3>
          <button 
            type="button" 
            data-action="click->delete-modal#hide"
            class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white cursor-pointer">
            <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
            </svg>
            <span class="sr-only">Close modal</span>
          </button>
        </div>
        <div class="p-4 md:p-5">
          <div class="flex items-center mb-4 space-x-2">
            <svg class="text-gray-400 dark:text-gray-200 fill-current" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" width="16" height="16">
              <path d="M256 512A256 256 0 1 0 256 0a256 256 0 1 0 0 512zM216 336l24 0 0-64-24 0c-13.3 0-24-10.7-24-24s10.7-24 24-24l48 0c13.3 0 24 10.7 24 24l0 88 8 0c13.3 0 24 10.7 24 24s-10.7 24-24 24l-80 0c-13.3 0-24-10.7-24-24s10.7-24 24-24zm40-208a32 32 0 1 1 0 64 32 32 0 1 1 0-64z"/>
            </svg>
            <h3 class="text-lg font-normal text-gray-500 dark:text-gray-400">
              Are you sure you want to delete
              <span data-delete-modal-target="itemName" class="font-semibold text-gray-900 dark:text-white"></span>?
            </h3>
          </div>
          <p class="mb-5 text-sm text-gray-500 dark:text-gray-400">
            This action cannot be undone.
          </p>
        </div>
        <div class="w-full flex items-center justify-end p-4 md:p-5 border-t border-gray-200 rounded-b dark:border-gray-600 space-x-6">
          <button 
            data-action="click->delete-modal#confirm" 
            type="button" 
            class="px-4 py-2 text-white bg-red-600 dark:bg-red-700 dark:text-red-100 dark:hover:bg-red-800 hover:bg-red-700 font-medium rounded-lg text-sm inline-flex items-center cursor-pointer focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 dark:bg-red-500 dark:hover:bg-red-600 dark:focus:ring-offset-gray-800">
            <%= "Yes, delete" %>
          </button>
          <button 
            data-action="click->delete-modal#cancel" 
            type="button" 
            class="px-4 py-2 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 dark:bg-gray-700 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700 focus:ring-2 focus:ring-gray-200 focus:ring-offset-2 dark:focus:ring-offset-gray-800">
            Cancel
          </button>
        </div>
      </div>
    </div>
  </div>
  <form data-delete-modal-target="deleteForm" method="post" style="display: none;">
    <%= csrf_meta_tags %>
    <input type="hidden" name="_method" value="delete">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  </form>
</div>