<div id="<%= dom_id match_result %>">
  <div class="flex flex-col w-full p-6 bg-white rounded-lg shadow-md dark:bg-gray-800 gap-2">
      <div class="flex items-center text-sm text-gray-500 dark:text-gray-400">
        <span class="mr-2"><%= match_result.match.played_at.strftime("%B %d, %Y") %></span>
        <p class="p-2 bg-gray-200 dark:bg-gray-700 rounded-md">
          Match # <%= match_result.match_id %>
        </p>
      </div>
      
      <div class="flex items-center justify-center space-x-6">
        <div class="text-center p-4 rounded-lg">
          <p class="font-semibold <%= match_result_text_class(match_result.match, match_result.match.white_player) %>">
            <%= match_result_player_name(match_result, :white) %>
          </p>
          <p class="text-sm text-gray-600 dark:text-gray-300 mt-1">
            <%= match_result.draw ? 'Draw' : 'Winner' %>
          </p>
        </div>
        <div class="text-2xl font-bold text-gray-400">VS</div>
        <div class="text-center p-4 rounded-lg">
          <p class="font-semibold <%= match_result_text_class(match_result.match, match_result.match.black_player) %>">
            <%= match_result_player_name(match_result, :black) %>
          </p>
          <p class="text-sm text-gray-600 dark:text-gray-300 mt-1">
            <%= match_result.draw ? 'Draw' : 'Loss' %>
          </p>
        </div>
      </div>
  </div>
</div>
